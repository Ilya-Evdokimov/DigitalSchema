                <Ellipse Margin="10" WidthRequest="20" HeightRequest="20" Stroke="White" Fill="{Binding Diod_08, Converter={StaticResource ColorToBrushConverter}, Mode=TwoWay}">
                    <Ellipse.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnEllipseTapped"/>
                    </Ellipse.GestureRecognizers>
                </Ellipse>
