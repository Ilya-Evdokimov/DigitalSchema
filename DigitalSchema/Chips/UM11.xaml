                </Ellipse>
                <Label Text="A 1-4"/>
            </HorizontalStackLayout>
        </Grid>
        <Grid>
            <HorizontalStackLayout>
                <Ellipse Margin="10" WidthRequest="20" HeightRequest="20" Stroke="White" Fill="{Binding Diod_04, Converter={StaticResource ColorToBrushConverter}, Mode=TwoWay}">
